#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    aliases {
        led-red = &led0;
        led-green = &led1;
        led-blue = &led2;
    };

    leds {
        compatible = "gpio-leds";
        status = "okay";
        led0: led_0 {
            gpios = <&gpio0 17 GPIO_ACTIVE_LOW>;  // red LED, connected to P0.16
        };
        led1: led_1 {
            gpios = <&gpio0 8 GPIO_ACTIVE_LOW>;  // green LED, connected to P0.08
        };
        led2: led_2 {
            gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;  // blue LED, connected to P0.06
        };
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <16>;
        rows = <4>;
        
//  | SW5  | SW4  | SW3  | SW2  | SW1  |      | SW1  | SW2  | SW3  | SW4  | SW5  |
//  | SW10 | SW9  | SW8  | SW7  | SW6  |      | SW6  | SW7  | SW8  | SW9  | SW10 |
//  | SW15 | SW14 | SW13 | SW12 | SW11 |      | SW11 | SW12 | SW13 | SW14 | SW15 |
//                | SW18 | SW17 | SW16 |      | SW16 | SW17 | SW18 |
        map = <
    RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)     RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)
    RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)     RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)
    RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)     RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)
                    RC(3,3) RC(3,4) RC(3,5)     RC(3,0) RC(3,1) RC(3,2)
            
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        row-gpios
            = <&pro_micro 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row A from the schematic file
            , <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row B from the schematic file
            , <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row C from the schematic file
            , <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row D from the schematic file
            , <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)> // Row E from the schematic file
            ;
        col-gpios
        = <&pro_micro 21 GPIO_ACTIVE_HIGH> // col1 in the schematic
        , <&pro_micro 20 GPIO_ACTIVE_HIGH> // col2 in the schematic
        , <&pro_micro 19 GPIO_ACTIVE_HIGH> // col3 in the schematic
        , <&pro_micro 18 GPIO_ACTIVE_HIGH> // col4 in the schematic
        , <&pro_micro 15 GPIO_ACTIVE_HIGH> // col5 in the schematic
//        , <&pro_micro 14 GPIO_ACTIVE_HIGH> // col6 in the schematic -- dont exist in 3x5
        ;

    };
};